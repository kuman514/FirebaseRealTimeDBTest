<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/gotoFavScreen"
        android:layout_width="162dp"
        android:layout_height="136dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="141dp"
        android:text="favscreen"
        app:layout_constraintBottom_toTopOf="@+id/gotoDetailScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gotoDetailScreen"
        android:layout_width="160dp"
        android:layout_height="152dp"
        android:layout_marginBottom="76dp"
        android:text="detail"
        app:layout_constraintBottom_toTopOf="@+id/gotoAPITestScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gotoAPITestScreen"
        android:layout_width="160dp"
        android:layout_height="152dp"
        android:layout_marginBottom="72dp"
        android:text="API TEST"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>